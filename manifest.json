{

    "manifest_version": 2,
    "name": "Disable Scrolling on Youtube Shorts",
    "version": "0.1",
  
    "description": "Disables scrolling to a new short on Youtube Shorts",
  
    "icons": {
      "96": "disable_yt_shorts.png"
    },
  
    "content_scripts": [
      {
        "matches": ["https://*.youtube.com/*"],
        "css": ["yt_shorts.css"],
        "run_at": "document_start"
      }
    ]
  
  }
  